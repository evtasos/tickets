# Use an official Python runtime as a parent image
FROM python:3.8-slim-buster

# Install DNS utilities and openssl
RUN apt-get update && apt-get install -y dnsutils openssl

# Set the working directory to /app
WORKDIR /app

# Copy the current directory contents into the container at /app
COPY . /app

# Generate a self-signed certificate and key
RUN openssl genrsa -out key.pem 2048
RUN openssl req -new -key key.pem -out csr.pem
RUN openssl x509 -req -days 365 -in csr.pem -signkey key.pem -out cert.pem


# Install any needed packages specified in requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Make port 443 available to the world outside this container
EXPOSE 443

# Define environment variable
ENV NAME World

# Run app.py when the container launches
CMD ["gunicorn", "--certfile=/app/ssl.crt", "--keyfile=/app/ssl.key", "-w", "4", "-b", "0.0.0.0:443", "app:app"]
